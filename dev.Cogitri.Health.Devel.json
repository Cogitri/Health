{
  "app-id": "dev.Cogitri.Health.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "dev.Cogitri.Health.Devel",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "tags": ["devel", "development", "nightly"],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a",
    "/lib/girepository-1.0",
    "/share/gir-1.0"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": ["--share=network"],
    "env": {
      "RUST_BACKTRACE": "1"
    }
  },
  "modules": [
    {
      "name": "blueprintcompiler",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "commit": "87cedc2c7e48b01dc1b07aef937e2fe02111b18c"
        }
      ]
    },
    {
      "name": "tracker",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": ["-Dman=false", "-Dsystemd_user_services=false"],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/tracker/3.3/tracker-3.3.2.tar.xz",
          "sha512": "2009c7a9b82fd278e38bc71cb41ef1fccb23493bd84a71456c7568ed7a025ce68bab689b8f14b8008479a203a5fdc02acea1862f4f482467ed5c295bde3d4ad8"
        },
        {
          "type": "patch",
          "path": "build-aux/tracker-529.patch"
        }
      ]
    },
    {
      "name": "health",
      "builddir": true,
      "buildsystem": "meson",
      "cleanup": ["/usr/"],
      "config-opts": ["-Dprofile=development"],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
