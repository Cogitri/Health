{
  "id": "dev.Cogitri.Health.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "dev.Cogitri.Health.Devel",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "tags": [
    "devel",
    "development",
    "nightly"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a",
    "/lib/girepository-1.0",
    "/share/gir-1.0"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": [
      "--share=network"
    ],
    "env": {
      "RUST_BACKTRACE": "1"
    }
  },
  "modules": [
    {
      "name": "blueprintcompiler",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "commit": "87cedc2c7e48b01dc1b07aef937e2fe02111b18c"
        }
      ]
    },
    {
      "name": "tracker",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "-Dman=false",
        "-Dsystemd_user_services=false"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/tracker/3.3/tracker-3.3.3.tar.xz",
          "sha512": "0f8ad998a5de6914d1e24da1b2021967339a2e637996b3e672fe4991177e69b750cdd9eb894e5e6f5f394d991b680d40afc05b95f69171ec38278e30c9729a15"
        },
        {
          "type": "patch",
          "path": "build-aux/tracker-524.patch"
        },
        {
          "type": "patch",
          "path": "build-aux/tracker-529.patch"
        }
      ]
    },
    {
      "name": "health",
      "builddir": true,
      "buildsystem": "meson",
      "cleanup": [
        "/usr/"
      ],
      "config-opts": [
        "-Dprofile=development"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
