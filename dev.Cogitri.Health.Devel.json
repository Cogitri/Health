{
  "app-id": "dev.Cogitri.Health.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "command": "dev.Cogitri.Health.Devel",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "tags": ["devel", "development", "nightly"],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a",
    "/lib/girepository-1.0",
    "/share/gir-1.0"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": ["--share=network"],
    "env": {
      "RUST_BACKTRACE": "1",
      "RUSTFLAGS": ""
    }
  },
  "modules": [
    {
      "name": "blueprintcompiler",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "commit": "93f2a27e35905420e70bfdb5c2f04d6af43b357d"
        }
      ]
    },
    {
      "name": "tracker",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": ["-Dman=false", "-Dsystemd_user_services=false"],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/tracker/3.3/tracker-3.3.0.rc.tar.xz",
          "sha512": "9b7e75320e03ef8f528b6e89cdc55439e80df1c5e85a29b2dae09dc446eb94874b10f4f4674b9d37c3ecd80531dd09df7a1f3a27e7b03762744727736c33ad2b"
        },
        {
          "type": "patch",
          "path": "build-aux/tracker-subsecond-accuracy.patch"
        }
      ]
    },
    {
      "name": "health",
      "builddir": true,
      "buildsystem": "meson",
      "cleanup": ["/usr/"],
      "config-opts": ["-Dprofile=development"],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
