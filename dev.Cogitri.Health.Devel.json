{
  "id": "dev.Cogitri.Health.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable",
    "org.freedesktop.Sdk.Extension.llvm14"
  ],
  "command": "dev.Cogitri.Health.Devel",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "tags": [
    "devel",
    "development",
    "nightly"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a",
    "/lib/girepository-1.0",
    "/share/gir-1.0"
  ],
  "build-options": {
    "append-ld-library-path": "/usr/lib/sdk/llvm14/lib",
    "append-path": "/usr/lib/sdk/llvm14/bin:/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_LINKER": "clang",
      "CARGO_TARGET_X86_64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
      "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER": "clang",
      "CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_RUSTFLAGS": "-C link-arg=-fuse-ld=/usr/lib/sdk/rust-stable/bin/mold",
      "RUST_BACKTRACE": "1"
    },
    "build-args": [
      "--share=network"
    ]
  },
  "modules": [
    {
      "name": "blueprintcompiler",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "commit": "87cedc2c7e48b01dc1b07aef937e2fe02111b18c"
        }
      ]
    },
    {
      "name": "health",
      "builddir": true,
      "buildsystem": "meson",
      "cleanup": [
        "/usr/",
        "/app/share/gir-1.0",
        "/app/share/vala",
        "/app/share/blueprint-compiler",
        "/app/lib/pkgconfig",
        "/app/lib/girepository-1.0",
        "/app/libexec",
        "/app/lib/tracker-3.0"
      ],
      "config-opts": [
        "-Dprofile=development"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
