<interface domain="dev.Cogitri.Health">
  <requires lib="gtk+" version="3.24"/>
  <requires lib="libhandy" version="1.0"/>
  <object class="GtkAdjustment" id="age_adjustment">
    <property name="upper">200</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
  </object>
  <object class="GtkAdjustment" id="height_adjustment">
    <property name="upper">300</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
  </object>
  <object class="GtkAdjustment" id="stepgoal_adjustment">
    <property name="upper">99999</property>
    <property name="step-increment">100</property>
    <property name="page-increment">1000</property>
  </object>
  <object class="GtkAdjustment" id="weightgoal_adjustment">
    <property name="upper">999</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
  </object>
  <template class="HealthPreferencesWindow" parent="HdyPreferencesWindow">
    <property name="can-focus">False</property>
    <property name="title" translatable="yes">Health Preferences</property>
    <child>
      <object class="HdyPreferencesPage">
        <property name="visible">True</property>
        <property name="icon_name">emblem-system-symbolic</property>
        <property name="title" translatable="yes">General</property>
        <child>
          <object class="HdyPreferencesGroup">
            <property name="visible">True</property>
            <property name="title" translatable="yes">User</property>
            <child>
              <object class="HdyActionRow">
                <property name="title" translatable="yes">Unitsystem</property>
                <child>
                  <object class="GtkBox">
                    <property name="can-focus">0</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <property name="margin-start">6</property>
                    <property name="margin-end">6</property>
                    <style>
                      <class name="linked"/>
                    </style>
                    <child>
                      <object class="GtkToggleButton" id="unit_imperial_togglebutton">
                        <property name="label" translatable="yes">Imperial</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton">
                        <property name="label" translatable="yes">Metric</property>
                        <property name="active">1</property>
                        <property name="group">unit_imperial_togglebutton</property>
                        <signal name="toggled" handler="unit_metric_togglebutton_toggled" swapped="no"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="HdyActionRow" id="age_actionrow">
                <property name="visible">True</property>
                <property name="title" translatable="yes">Age</property>
                <child>
                  <object class="GtkSpinButton" id="age_spinner">
                    <property name="width-chars">3</property>
                    <property name="text" translatable="yes">0</property>
                    <property name="adjustment">age_adjustment</property>
                    <property name="numeric">1</property>
                    <property name="margin-start">6</property>
                    <property name="margin-end">6</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <signal name="changed" handler="age_spinner_changed" swapped="no"/>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="HdyActionRow" id="height_actionrow">
                <property name="visible">True</property>
                <child>
                  <object class="GtkSpinButton" id="height_spinner">
                    <property name="width-chars">3</property>
                    <property name="text" translatable="yes">0</property>
                    <property name="adjustment">height_adjustment</property>
                    <property name="numeric">1</property>
                    <property name="margin-start">6</property>
                    <property name="margin-end">6</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <signal name="changed" handler="height_spinner_changed" swapped="no"/>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="HdyPreferencesPage">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="title" translatable="yes">Steps</property>
        <child>
          <object class="HdyPreferencesGroup">
            <property name="visible">True</property>
            <property name="can-focus">False</property>
            <child>
              <object class="HdyActionRow" id="stepgoal_actionrow">
                <property name="visible">True</property>
                <property name="title" translatable="yes">Stepgoal</property>
                <child>
                  <object class="GtkSpinButton" id="stepgoal_spinner">
                    <property name="width-chars">5</property>
                    <property name="text" translatable="yes">10000</property>
                    <property name="adjustment">stepgoal_adjustment</property>
                    <property name="numeric">1</property>
                    <property name="margin-start">6</property>
                    <property name="margin-end">6</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <signal name="changed" handler="stepgoal_spinner_changed" swapped="no"/>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="HdyPreferencesPage">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="title" translatable="yes">Weight</property>
        <child>
          <object class="HdyPreferencesGroup">
            <property name="visible">True</property>
            <property name="can-focus">False</property>
            <child>
              <object class="HdyActionRow" id="weightgoal_actionrow">
                <property name="visible">True</property>
                <property name="title" translatable="yes">Weightgoal</property>
                <child>
                  <object class="GtkSpinButton" id="weightgoal_spinner">
                    <property name="digits">2</property>
                    <property name="width-chars">5</property>
                    <property name="adjustment">weightgoal_adjustment</property>
                    <property name="margin-start">6</property>
                    <property name="margin-end">6</property>
                    <property name="margin-top">6</property>
                    <property name="margin-bottom">6</property>
                    <signal name="changed" handler="weightgoal_spinner_changed" swapped="no"/>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="HdyPreferencesPage">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="title" translatable="yes">Sync</property>
        <child>
          <object class="HdyPreferencesGroup">
            <property name="visible">True</property>
            <property name="can-focus">False</property>
            <property name="title">Start sync with third-party providers.</property>
            <child>
              <object class="HealthSyncView" id="sync_view">
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
