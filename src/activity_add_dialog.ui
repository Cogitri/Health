<interface domain="dev.Cogitri.Health">
  <requires lib="gtk+" version="3.99"/>
  <requires lib="libhandy" version="1.0"/>
  <object class="GtkAdjustment" id="steps_adjustment">
    <property name="upper">99999</property>
    <property name="step-increment">100</property>
    <property name="page-increment">1000</property>
  </object>
  <object class="GtkAdjustment" id="activity_minutes_adjustment">
    <property name="upper">1440</property>
    <property name="step-increment">1</property>
    <property name="page-increment">15</property>
  </object>
  <object class="GtkListStore" id="activity_type_model">
    <columns>
      <!-- column-name activity-name -->
      <column type="gchararray"/>
    </columns>
  </object>
  <template class="HealthActivityAddDialog" parent="GtkDialog">
    <property name="use-header-bar">1</property>
    <property name="modal">1</property>
    <property name="destroy-with-parent">1</property>
    <property name="title" translatable="yes">Add New Activity</property>
    <signal name="response" handler="on_response" swapped="no"/>
    <child type="action">
      <object class="GtkButton" id="button_cancel">
        <property name="label" translatable="yes">_Cancel</property>
        <property name="use-underline">1</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="button_ok">
        <property name="label" translatable="yes">_Save</property>
        <property name="use-underline">1</property>
      </object>
    </child>
    <action-widgets>
      <action-widget response="cancel">button_cancel</action-widget>
      <action-widget response="ok" default="true">button_ok</action-widget>
    </action-widgets>
    <child>
      <object class="GtkScrolledWindow">
        <property name="propagate-natural-height">1</property>
        <child>
          <object class="HdyClamp">
            <property name="maximum-size">400</property>
            <property name="tightening-threshold">200</property>
            <property name="valign">center</property>
            <property name="vexpand">True</property>
            <property name="hexpand">True</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
            <property name="margin-top">6</property>
            <property name="margin-bottom">6</property>
            <child>
              <object class="HdyPreferencesGroup">
                <child>
                  <object class="HdyActionRow">
                    <property name="title" translatable="yes">Date</property>
                    <child>
                      <object class="HealthDateSelector" id="date_selector">
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="HdyActionRow">
                    <property name="title" translatable="yes">Activity Type</property>
                    <child>
                      <object class="GtkComboBox" id="activity_type_combobox">
                        <property name="has-entry">false</property>
                        <property name="model">activity_type_model</property>
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <signal name="changed" handler="on_activity_type_combobox_changed" swapped="no"/>
                        <child>
                          <object class="GtkCellRendererText"/>
                          <attributes>
                            <attribute name="text">0</attribute>
                          </attributes>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="HdyActionRow">
                    <property name="title" translatable="yes">Activity Duration (in Minutes)</property>
                    <child>
                      <object class="GtkSpinButton" id="minutes_spinner">
                        <property name="width-chars">5</property>
                        <property name="text" translatable="yes">0</property>
                        <property name="adjustment">activity_minutes_adjustment</property>
                        <property name="numeric">1</property>
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <signal name="changed" handler="on_spinner_changed" swapped="no"/>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="HdyActionRow">
                    <property name="title" translatable="yes">Stepcount</property>
                    <child>
                      <object class="GtkSpinButton" id="steps_spinner">
                        <property name="width-chars">5</property>
                        <property name="text" translatable="yes">0</property>
                        <property name="adjustment">steps_adjustment</property>
                        <property name="numeric">1</property>
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <signal name="changed" handler="on_spinner_changed" swapped="no"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
