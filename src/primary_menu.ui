<interface domain="gnome-health">
  <menu id="primary_menu">
    <submenu>
      <attribute translatable="yes" name="label">_Units</attribute>
      <item>
        <attribute translatable="yes" name="label">_Imperial</attribute>
        <attribute name="action">app.units</attribute>
        <attribute name="target">imperial</attribute>
      </item>
      <item>
        <attribute translatable="yes" name="label">_Metric</attribute>
        <attribute name="action">app.units</attribute>
        <attribute name="target">metric</attribute>
      </item>
    </submenu>
    <section>
      <item>
        <attribute name="action">app.preferences</attribute>
        <attribute name="label" translatable="yes">_Preferences</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="action">app.about</attribute>
        <attribute name="label" translatable="yes">_About Health</attribute>
      </item>
    </section>
  </menu>
</interface>
