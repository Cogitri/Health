{
    "app-id": "dev.Cogitri.Health",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "dev.Cogitri.Health",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "build-options": {
        "build-args": [
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "gtk4.0",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Ddemos=false",
                "-Dbuild-tests=false",
                "-Dmedia=none",
                "-Dprint=none"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtk/3.99/gtk-3.99.4.tar.xz",
                    "sha256": "8979cb1eb6ad2a496e00e94674d23f90aefae5d3f23b623ffda0b35d11ec85d0"
                }
            ]
        },
        {
            "name": "libhandy",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dprofiling=false",
                "-Dintrospection=enabled",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=true",
                "-Dglade_catalog=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/exalm/libhandy",
                    "branch": "gtk4"
                },
                {
                    "type": "patch",
                    "path": "build-aux/libhandy-dark-theme.patch"
                }
            ]
        },
        {
            "name": "rest",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/rest/0.8/rest-0.8.1.tar.xz",
                    "sha256": "0513aad38e5d3cedd4ae3c551634e3be1b9baaa79775e53b2dba9456f15b01c9"
                }
            ]
        },
        {
            "name": "health",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
