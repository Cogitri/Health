{
    "app-id": "dev.Cogitri.Health",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.38",
    "sdk": "org.gnome.Sdk",
    "command": "dev.Cogitri.Health",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "build-options": {
        "build-args": [
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "gtk4.0",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Ddemos=false",
                "-Dbuild-tests=false",
                "-Dmedia=none",
                "-Dprint=none"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gtk/3.99/gtk-3.99.3.tar.xz",
                    "sha256": "5745df4647e845f8a5fa0dbd59594afbfa6a6ba6a08a7c9632182970e8f49767"
                }
            ]
        },
        {
            "name": "libhandy",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dprofiling=false",
                "-Dintrospection=enabled",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=true",
                "-Dglade_catalog=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/exalm/libhandy",
                    "branch": "gtk4"
                }
            ]
        },
        {
            "name": "rest",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/rest/0.8/rest-0.8.1.tar.xz",
                    "sha256": "0513aad38e5d3cedd4ae3c551634e3be1b9baaa79775e53b2dba9456f15b01c9"
                }
            ]
        },
        {
            "name": "health",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
