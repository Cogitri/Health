<interface domain="dev.Cogitri.Health">
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <object class="GtkAdjustment" id="height_adjustment">
    <property name="upper">300</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
  </object>
  <object class="GtkAdjustment" id="step_goal_adjustment">
    <property name="upper">99999</property>
    <property name="step-increment">100</property>
    <property name="page-increment">1000</property>
  </object>
  <object class="GtkAdjustment" id="weight_goal_adjustment">
    <property name="upper">999</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
  </object>
  <object class="GtkSizeGroup">
    <property name="mode">horizontal</property>
    <widgets>
      <widget name="setup_done_button"/>
      <widget name="setup_next_page_button"/>
    </widgets>
  </object>
  <object class="GtkSizeGroup">
    <property name="mode">horizontal</property>
    <widgets>
      <widget name="setup_quit_button"/>
      <widget name="setup_previous_page_button"/>
    </widgets>
  </object>
  <template class="HealthSetupWindow" parent="AdwApplicationWindow">
    <property name="default-width">750</property>
    <property name="default-height">500</property>
    <property name="title" translatable="yes">Health Setup</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <property name="show-end-title-buttons">0</property>
            <property name="show-start-title-buttons">0</property>
            <child>
              <object class="GtkStack" id="setup_left_stack">
                <property name="transition-type">crossfade</property>
                <child>
                  <object class="GtkStackPage">
                    <property name="child">
                      <object class="GtkButton" id="setup_quit_button">
                        <property name="label" translatable="yes">_Quit</property>
                        <property name="action-name">app.quit</property>
                        <property name="use-underline">1</property>
                        <property name="sensitive">1</property>
                        <signal name="clicked" handler="handle_setup_quit_button_clicked" swapped="true"/>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="child">
                      <object class="GtkButton" id="setup_previous_page_button">
                        <property name="label" translatable="yes">_Previous</property>
                        <property name="use-underline">1</property>
                        <property name="visible">0</property>
                        <signal name="clicked" handler="handle_setup_previous_page_button_clicked" swapped="true"/>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            <child type="end">
              <object class="GtkStack" id="setup_right_stack">
                <property name="visible-child">setup_done_button</property>
                <property name="transition-type">crossfade</property>
                <child>
                  <object class="GtkStackPage">
                    <property name="child">
                      <object class="GtkButton" id="setup_next_page_button">
                        <property name="label" translatable="yes">_Next</property>
                        <property name="use-underline">1</property>
                        <property name="sensitive">0</property>
                        <signal name="clicked" handler="handle_setup_next_page_button_clicked" swapped="true"/>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="child">
                      <object class="GtkButton" id="setup_done_button">
                        <property name="label" translatable="yes">_Done</property>
                        <property name="use-underline">1</property>
                        <property name="visible">0</property>
                        <signal name="clicked" handler="handle_setup_done_button_clicked" swapped="true"/>
                        <style>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwCarousel" id="setup_carousel">
            <property name="vexpand">True</property>
            <property name="hexpand">True</property>
            <property name="interactive">0</property>
            <signal name="page-changed" handler="handle_setup_carousel_page_changed" swapped="true"/>
            <child>
              <object class="GtkBox" id="setup_first_page">
                <property name="orientation">vertical</property>
                <property name="halign">center</property>
                <property name="vexpand">True</property>
                <property name="hexpand">True</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Welcome to Health!</property>
                    <property name="margin-top">25</property>
                    <property name="margin-bottom">10</property>
                    <property name="wrap">1</property>
                    <property name="wrap_mode">PANGO_WRAP_WORD_CHAR</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Please enter some information to get setup.</property>
                    <property name="wrap">1</property>
                    <property name="wrap_mode">PANGO_WRAP_WORD_CHAR</property>
                    <style>
                      <class name="title-2"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwClamp">
                    <property name="maximum-size">400</property>
                    <property name="tightening-threshold">200</property>
                    <property name="valign">center</property>
                    <property name="vexpand">True</property>
                    <property name="hexpand">True</property>
                    <child>
                      <object class="GtkListBox">
                        <property name="selection-mode">none</property>
                        <style>
                          <class name="boxed-list"/>
                        </style>
                        <child>
                          <object class="AdwActionRow" id="unit_actionrow">
                            <property name="title" translatable="yes">Unit system</property>
                            <child>
                              <object class="GtkBox" id="unit_box">
                                <property name="valign">center</property>
                                <style>
                                  <class name="linked"/>
                                </style>
                                <child>
                                  <object class="GtkToggleButton" id="unit_imperial_togglebutton">
                                    <property name="label" translatable="yes">Imperial</property>
                                    <property name="action-name">app.unit-system</property>
                                    <property name="action-target">'imperial'</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkToggleButton" id="unit_metric_togglebutton">
                                    <property name="label" translatable="yes">Metric</property>
                                    <property name="action-name">app.unit-system</property>
                                    <property name="action-target">'metric'</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="age_actionrow">
                            <property name="title" translatable="yes">Birthday</property>
                            <child>
                              <object class="HealthDateSelector" id="birthday_selector">
                                <property name="valign">center</property>
                                <signal name="notify::selected-date" handler="try_enable_next_button" swapped="true"/>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow" id="height_actionrow">
                            <property name="title" translatable="yes">Height</property>
                            <child>
                              <object class="HealthUnitSpinButton" id="height_spin_button">
                                <property name="unit-kind">like_centimeters</property>
                                <property name="width-chars">5</property>
                                <property name="text">0</property>
                                <property name="adjustment">height_adjustment</property>
                                <property name="valign">center</property>
                                <signal name="changed" handler="handle_height_spin_button_changed" swapped="true"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="setup_second_page">
                <property name="orientation">vertical</property>
                <property name="halign">center</property>
                <property name="vexpand">True</property>
                <property name="hexpand">True</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Please enter your daily step goal.</property>
                    <property name="margin-top">25</property>
                    <property name="margin-bottom">10</property>
                    <property name="wrap">1</property>
                    <property name="wrap_mode">PANGO_WRAP_WORD_CHAR</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">The WHO recommends 10.000 steps per day.</property>
                    <property name="wrap">1</property>
                    <property name="wrap_mode">PANGO_WRAP_WORD_CHAR</property>
                    <style>
                      <class name="title-2"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwClamp">
                    <property name="maximum-size">400</property>
                    <property name="tightening-threshold">200</property>
                    <property name="valign">center</property>
                    <property name="vexpand">True</property>
                    <property name="hexpand">True</property>
                    <child>
                      <object class="GtkListBox">
                        <property name="selection-mode">none</property>
                        <style>
                          <class name="boxed-list"/>
                        </style>
                        <child>
                          <object class="AdwActionRow" id="step_goal_actionrow">
                            <property name="title" translatable="yes">Step goal</property>
                            <child>
                              <object class="GtkSpinButton" id="step_goal_spin_button">
                                <property name="width-chars">5</property>
                                <property name="adjustment">step_goal_adjustment</property>
                                <property name="numeric">1</property>
                                <property name="valign">center</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="setup_third_page">
                <property name="orientation">vertical</property>
                <property name="halign">center</property>
                <property name="vexpand">True</property>
                <property name="hexpand">True</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Please enter your weight goal.</property>
                    <property name="margin-top">25</property>
                    <property name="margin-bottom">10</property>
                    <property name="wrap">1</property>
                    <property name="wrap_mode">PANGO_WRAP_WORD_CHAR</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">The WHO recommends a BMI of 18.5-24.9.</property>
                    <property name="wrap">1</property>
                    <property name="wrap_mode">PANGO_WRAP_WORD_CHAR</property>
                    <style>
                      <class name="title-2"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwClamp">
                    <property name="maximum-size">400</property>
                    <property name="tightening-threshold">200</property>
                    <property name="valign">center</property>
                    <property name="vexpand">True</property>
                    <property name="hexpand">True</property>
                    <child>
                      <object class="GtkListBox">
                        <property name="selection-mode">none</property>
                        <style>
                          <class name="boxed-list"/>
                          <class name="weight-goal"/>
                        </style>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <child>
                              <object class="AdwActionRow" id="weight_goal_actionrow">
                                <property name="title" translatable="yes">Weight goal</property>
                                <child>
                                  <object class="HealthUnitSpinButton" id="weight_goal_spin_button">
                                    <property name="unit-kind">like_kilogram</property>
                                    <property name="digits">1</property>
                                    <property name="width-chars">5</property>
                                    <property name="adjustment">weight_goal_adjustment</property>
                                    <property name="valign">center</property>
                                    <signal name="changed" handler="handle_weight_spin_button_changed" swapped="true"/>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="HealthBMILevelBar" id="bmi_levelbar">
                                <property name="margin-start">6</property>
                                <property name="margin-end">6</property>
                                <property name="margin-top">6</property>
                                <property name="margin-bottom">6</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="setup_fourth_page">
                <property name="orientation">vertical</property>
                <property name="halign">center</property>
                <property name="vexpand">True</property>
                <property name="hexpand">True</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Setup sync with third-party providers.</property>
                    <property name="margin-top">25</property>
                    <property name="margin-bottom">10</property>
                    <property name="wrap">1</property>
                    <property name="wrap_mode">PANGO_WRAP_WORD_CHAR</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">You can sync steps and weight measurements from/to third-party providers.</property>
                    <property name="margin-end">6</property>
                    <property name="margin-start">6</property>
                    <property name="wrap">1</property>
                    <style>
                      <class name="title-2"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwClamp">
                    <property name="maximum-size">400</property>
                    <property name="tightening-threshold">200</property>
                    <property name="valign">center</property>
                    <property name="vexpand">True</property>
                    <property name="hexpand">True</property>
                    <child>
                      <object class="HealthSyncListBox" id="sync_list_box">
                        <property name="parent-window">HealthSetupWindow</property>
                      </object>
                    </child>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwCarouselIndicatorDots">
            <property name="carousel">setup_carousel</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
