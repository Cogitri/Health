<interface domain="dev.Cogitri.Health">
  <requires lib="gtk" version="4.0"/>
  <template class="HealthViewCalories" parent="HealthView">
    <property name="empty-subtitle" translatable="yes">You can use the &lt;b&gt;+&lt;/b&gt; button to add a new activity.</property>
    <property name="icon-name">steps-symbolic</property>
    <property name="name">Calories</property>
    <property name="title" translatable="yes">Calories</property>
    <property name="view-title" translatable="yes">Calories</property>
    <property name="content-widget">
      <object class="GtkOverlay">
        <child>
          <object class="GtkFrame">
            <property name="margin-bottom">18</property>
            <property name="margin-end">18</property>
            <property name="margin-start">18</property>
            <child>
              <object class="GtkScrolledWindow" id="scrolled_window">
                <property name="vscrollbar-policy">GTK_POLICY_NEVER</property>
              </object>
            </child>
          </object>
        </child>
        <child type="overlay">
          <object class="GtkGrid" id="legend_box">
            <property name="halign">GTK_ALIGN_END</property>
            <property name="valign">GTK_ALIGN_START</property>
            <property name="margin-end">40</property>
            <property name="margin-top">5</property>
            <child>
              <object class="HealthLegendRow" id="legend_rows">
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="HealthLegendRow" id="legend_rows">
                <layout>
                  <property name="column">0</property>
                  <property name="row">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="HealthLegendRow" id="legend_rows">
                <layout>
                  <property name="column">0</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
