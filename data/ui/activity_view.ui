<interface domain="dev.Cogitri.Health">
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="HealthViewActivity" parent="HealthView">
    <property name="empty-subtitle" translatable="yes">You can use the &lt;b&gt;+&lt;/b&gt; button to add a new activity.</property>
    <property name="icon-name">walking-symbolic</property>
    <property name="name">Activities</property>
    <property name="title" translatable="yes">Recent Activities</property>
    <property name="view-title" translatable="yes">Activities</property>
    <property name="content-widget">
      <object class="GtkStack" id="stack_activity">
        <child>
          <object class="GtkStackPage">
            <property name="name">no_recent</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkImage" id="empty_icon">
                    <property name="pixel_size">96</property>
                    <property name="icon-name">walking-symbolic</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="since_date">
                    <property name="margin-top">10</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">recent_activities</property>
            <property name="child">
              <object class="GtkBox">
                <child>
                  <object class="GtkScrolledWindow" id="scrolled_window">
                    <child>
                      <object class="AdwClamp" id="clamp">
                        <property name="maximum-size">800</property>
                        <property name="tightening-threshold">600</property>
                        <property name="valign">center</property>
                        <property name="vexpand">True</property>
                        <property name="hexpand">True</property>
                        <property name="margin-start">6</property>
                        <property name="margin-end">6</property>
                        <property name="margin-top">6</property>
                        <property name="margin-bottom">6</property>
                        <child>
                          <object class="GtkFrame" id="frame"/>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
