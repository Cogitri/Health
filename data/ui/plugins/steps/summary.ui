<interface domain="dev.Cogitri.Health">
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="HealthPluginStepsSummaryRow" parent="HealthPluginSummaryRow">
    <property name="title" translatable="yes">Steps</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="margin-end">13</property>
        <child>
          <object class="HealthCircularProgressBar" id="circular_progress_bar"/>
        </child>
        <child>
          <object class="GtkLabel" id="steps_percentage"/>
        </child>
        <child>
          <object class="GtkLabel" id="activity_subtext">
            <property name="wrap">1</property>
            <property name="max-width-chars">15</property>
            <!-- TRANSLATORS: This is displayed via two strings: x% and then this label. E.g. 100% of daily step goal -->
            <property translatable="yes" name="label">of daily step goal</property>
            <attributes>
              <attribute name="font-desc" value="8.0"></attribute>
              <attribute name="weight" value="200.0"></attribute>
            </attributes>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
