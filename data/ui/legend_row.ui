<interface domain="dev.Cogitri.Health">
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="HealthLegendRow" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <child>
          <object class="GtkScrolledWindow">
            <property name="vscrollbar-policy">GTK_POLICY_NEVER</property>
            <child>
              <object class="HealthColorCircle" id="color_circle"/>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="activity_name">
            <property name="label">activity</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
