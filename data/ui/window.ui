<interface domain="dev.Cogitri.Health">
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="action">win.disable-current-plugin</attribute>
        <attribute name="label" translatable="yes">_Disable Current Plugin</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="action">app.preferences</attribute>
        <attribute name="label" translatable="yes">_Preferences</attribute>
      </item>
      <item>
        <attribute name="action">app.shortcuts</attribute>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="action">app.about</attribute>
        <attribute name="label" translatable="yes">_About Health</attribute>
      </item>
    </section>
  </menu>
  <object class="GtkPopoverMenu" id="primary_menu_popover">
    <property name="menu_model">primary_menu</property>
  </object>
  <template class="HealthWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">Health</property>
    <property name="default-width">600</property>
    <property name="default-height">620</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <property name="show-end-title-buttons">True</property>
            <property name="show-start-title-buttons">True</property>
            <property name="centering-policy">strict</property>
            <style>
              <class name="titlebar"/>
            </style>
            <child>
              <object class="GtkButton" id="back_button">
                <property name="visible">0</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">go-previous-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="add_data_button">
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">list-add-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="enable_plugin_button">
                <property name="visible">0</property>
                <property name="label" translatable="yes">Enable plugin</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton" id="primary_menu_button">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="popover">primary_menu_popover</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkInfoBar" id="error_infobar">
            <property name="revealed">0</property>
            <property name="show-close-button">1</property>
            <property name="message-type">GTK_MESSAGE_ERROR</property>
            <child>
              <object class="GtkLabel" id="error_label">
                <property name="margin-start">6</property>
                <property name="margin-end">6</property>
                <property name="halign">center</property>
                <property name="hexpand">1</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="HealthViewHomePage" id="view_home_page">
            <property name="width-request">265</property>
            <property name="height-request">200</property>
            <property name="vexpand">1</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
